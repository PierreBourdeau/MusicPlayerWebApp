<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login - Page</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/b49acaecd6.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="login-page.css" />
</head>
<body>
    <div class="background-div">
        <div class="login-main">
            <div class="login-first"><i class="fas fa-user"></i></div>
            <div class="login-form">
                <form action="/login" method="POST">
                    <label>
                        <input type="email" placeholder="mail" name="email" id="email" required/>
                    </label>
                    <label>
                        <input type="password" placeholder="password" name="password" id="password" required/>
                    </label>
                    <input type="submit" />
                </form>
            </div>
            <div class="login-buttons">
                <a>Forgot password ?</a>
                <a href="register">Register</a>
            </div>
        </div>
    </div>
</body>
</html>